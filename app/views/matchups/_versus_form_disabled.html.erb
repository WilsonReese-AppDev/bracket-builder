<div class="row">
  <div class="col-8">
    <div class="form-check disabled">
      <%= radio_button_tag "matchup[winner_id]", "option_a", false, disabled: true %>
      <% if matchup.option_a.present? %>
        <%= label_tag "option_a", "#{matchup.option_a.name}" %>
      <% else %>
        <%= label_tag "option_a", "" %>
      <% end %>
    </div>
    <div class="form-check disabled">
      <%= radio_button_tag "matchup[winner_id]", "option_b", false, disabled: true %>
      <% if matchup.option_b.present? %>
        <%= label_tag "option_b", "#{matchup.option_a.name}" %>
      <% else %>
        <%= label_tag "option_b", "" %>
      <% end %>
    </div>
  </div>
  <div class="col-4">
    <%= button_tag ">", class: "btn btn-outline-secondary", disabled: true %>
  </div>
</div>